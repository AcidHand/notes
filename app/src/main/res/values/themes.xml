<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Notes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/grey_light</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/white_tone</item>
        <item name="colorAccent">@color/amber</item>
        <item name="colorOnSecondary">@color/white_tone</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Notes</item>
    </style>

</resources>